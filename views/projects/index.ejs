

<%- include("../partials/header") %>

<!-- ðŸŒŸ Hero Section -->
<section class="py-5 text-center text-white position-relative ms-3 me-3 rounded" 
         style="background: linear-gradient(135deg, #6b11cbdf, #2574fccf); overflow: hidden;">
  <div class="container position-relative z-2">
    <h1 class="fw-bold display-4 mb-3" style="text-shadow: 2px 2px 10px rgba(0,0,0,0.3);">
      ðŸš€ Explore Amazing Projects
    </h1>
    <p class="lead mb-4 opacity-90" style="max-width: 600px; margin: auto;">
      Discover, share, and showcase creative work from developers around the world.
    </p>
    <a href="/projects/new" 
       class="btn btn-light btn-lg rounded-pill shadow-lg px-4 py-2 fw-semibold hover-scale">
      <i class="bi bi-plus-circle me-2"></i>Add Your Project
    </a>
  </div>
</section>

<!-- ðŸ“‚ Projects Grid -->
<div class="container my-5">
  <div class="row g-4">
    <% if (projects.length === 0) { %>
      <div class="col-12 text-center text-muted">
        <h3>No projects found</h3>
      </div>
    <% } %>

    <% projects.forEach(project => { %>
      <div class="col-md-6 col-lg-4">
        <div class="card glass-card border-0 rounded-4 overflow-hidden h-100 shadow-lg">

          <!-- Carousel / Image -->
          <% if (project.images && project.images.length > 0) { %>
            <div id="carousel-<%= project._id %>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% project.images.forEach((img, index) => { %>
                  <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <img src="<%= typeof img === 'string' ? img : img.url %>" 
                         class="d-block w-100" 
                         alt="<%= project.title %>" 
                         style="object-fit: cover; height: 220px;">
                  </div>
                <% }); %>
              </div>
            </div>
          <% } else { %>
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 220px;">
              <span class="text-muted">No image available</span>
            </div>
          <% } %>

          <!-- Project Info -->
          <div class="card-body">
            <span class="badge bg-gradient-primary mb-2 px-3 py-1 rounded">
             PostedBy: <%= project.owner?.username || 'Unknown' %>
            </span>
            <h5 class="fw-bold mb-2"><%= project.title %></h5>
            <p class="text-muted small">
              <%= project.description.length > 100 ? project.description.substring(0, 100) + '...' : project.description %>
            </p>
            <span class="badge bg-light text-dark small"><%= project.techStack %></span>
          </div>

          <!-- Links -->
          <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center">
            <a href="/projects/<%= project._id %>" class="btn btn-outline-primary btn-sm px-3">View</a>
            <% if (currentUserId && project.owner && currentUserId.toString() === project.owner._id.toString()) { %>
              <div>
                <a href="/projects/<%= project._id %>/edit" class="btn btn-outline-warning btn-sm me-1">Edit</a>
                <form action="/projects/<%= project._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              </div>
            <% } %>
          </div>

        </div>
      </div>
    <% }); %>
  </div>
</div>

<!-- Space before footer -->
<div class="my-5"></div>

<style>
  /* Glassmorphism Card */
  .glass-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    transition: all 0.3s ease-in-out;
  }
  .glass-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 10px 35px rgba(0,0,0,0.15);
  }
  /* Button hover effect */
  .hover-scale:hover {
    transform: scale(1.05);
    transition: transform 0.2s ease-in-out;
  }
  /* Gradient Badge */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #4e73df, #1cc88a);
    color: white;
  }
</style>

