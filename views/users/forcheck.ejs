<%- include("../partials/header") %>

<div class="container py-5">

  <div class="glass-card shadow-lg rounded-4 p-4">

    <!-- Image Carousel -->
    <% if (project.images && project.images.length > 0) { %>
      <div id="carousel-<%= project._id %>" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="3000">
        
        <!-- Indicators -->
        <div class="carousel-indicators">
          <% project.images.forEach((img, index) => { %>
            <button type="button" data-bs-target="#carousel-<%= project._id %>" data-bs-slide-to="<%= index %>"
              class="<%= index === 0 ? 'active' : '' %>" 
              aria-current="<%= index === 0 ? 'true' : 'false' %>" 
              aria-label="Slide <%= index + 1 %>"></button>
          <% }) %>
        </div>

        <!-- Slides -->
        <div class="carousel-inner rounded">
          <% project.images.forEach((img, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %> text-center">
              <img src="<%= img.url %>" 
                   class="d-block mx-auto img-fluid rounded shadow-sm"
                   style="max-height: 500px; object-fit: cover;" 
                   alt="Project Image">
            </div>
          <% }) %>
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= project._id %>" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= project._id %>" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <% } %>

    <!-- Project Info -->
    <div class="px-2">
      <h2 class="fw-bold text-gradient mb-3"><%= project.title %></h2>
      <p class="mb-2"><strong>Tech Stack:</strong> <%= project.techStack %></p>
      <p class="mb-2"><strong>Description:</strong> <%= project.description || 'Not provided' %></p>

  
      <!-- Links -->
      <div class="project-links mb-3">
        <% if (project.githubLink) { %>
          <a href="<%= project.githubLink %>" target="_blank" class="btn btn-outline-dark me-2 mb-2 shadow-sm">
            <i class="bi bi-github me-1 "></i> GitHub
          </a>
        <% } %>
        <% if (project.liveLink) { %>
          <a href="<%= project.liveLink %>" target="_blank" class="btn btn-outline-success mb-2 shadow-sm">
            <!-- <i class="fas fa-globe me-1"></i> Live Demo -->
            <i class="bi bi-globe me-1"></i> Live Demo
          </a>
        <% } %>
      </div>

      <p class="mb-3"><strong>Posted by:</strong> 
        <a href="/users/<%= project.owner._id %>" class="fw-semibold"><%= project.owner.username %></a>
      </p>

      <!-- Action Buttons -->
      <div class="d-flex flex-wrap gap-2">
        <a href="/projects" class="btn btn-outline-secondary rounded-pill shadow-sm">
          <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>

        <% if (currentUserId && project.owner && currentUserId.toString() === project.owner._id.toString()) { %>
          <a href="/projects/<%= project._id %>/edit" class="btn btn-warning rounded-pill shadow-sm">
            <i class="bi bi-pencil-square me-1"></i> Edit
          </a>
          <form action="/projects/<%= project._id %>?_method=DELETE" method="POST" class="d-inline">
            <button class="btn btn-danger rounded-pill shadow-sm">
              <i class="bi bi-trash me-1"></i> Delete
            </button>
          </form>
        <% } %>
      </div>
    </div>

  </div>
</div>

<style>
  /* Glass Card */
  .glass-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .glass-card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 10px 30px rgba(0,0,0,0.3);
  }

  /* Gradient Text */
  .text-gradient {
    background: linear-gradient(135deg, #6366f1, #22d3ee);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Buttons Shadow */
  .btn {
    transition: all 0.3s ease;
  }
  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0px 5px 15px rgba(0,0,0,0.2);
  }

  /* Carousel Images */
  .carousel-inner img {
    border-radius: 12px;
  }
</style>

